<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbsorbActivity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="16dp"
        >
        <TextView
            style="@style/text_title"
            android:id="@+id/imageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/spectrum"
            />
        <ImageView
            android:id="@+id/spectrum"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <TextView
        android:textSize="18dp"
        android:layout_marginLeft="16dp"
        style="@style/text_title"
        android:id="@+id/description_graph"
        android:layout_below="@+id/line1"
        android:text="Graph Spectrum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_below="@+id/description_graph"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/bt_present_data"
            style="@style/Text_bt_analyze"
            android:textColor="@color/seafoam_dark"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spectrum"
            android:textSize="12sp"
            android:onClick="showGraph"
            android:layout_marginEnd="10dp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:visibility="invisible"
            android:id="@+id/waveGraph"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="@style/Text_bt_analyze"
                android:textColor="@color/seafoam_dark"
                android:background="@drawable/bt_present_data"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="12sp"
                android:onClick="showDefaultGraph"
                android:layout_marginEnd="10dp"/>
            <Button
                android:padding="13dp"
                style="@style/Text_bt_analyze"
                android:textColor="@color/seafoam_dark"
                android:background="@drawable/bt_present_data"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absorbance"
                android:textSize="12sp"
                android:onClick="showAbsorbGraph"/>

        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:visibility="invisible"
            android:id="@+id/absorbGraph"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>