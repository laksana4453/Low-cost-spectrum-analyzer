<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="th.ac.kku.udomboonyaluck.disra.lowcostspectrumanalyzerapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CompareDataActivity"></activity>
        <activity android:name=".CameraActivity" />
        <activity
            android:name=".ShowLogo"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CroppingAutoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AbsorbActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CroppingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Configuration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>